{
    "type": "module",
    "scripts": {
        "webext": "web-ext run --firefox /usr/bin/firefox -p ~/.mozilla/firefox/DEV/ --keep-profile-changes --verbose --url https://neponet.de/iserv",
        "scss": "sass --watch scss:dist",
        "webpack": "npx webpack --config webpack.config.cjs --mode production",
        "webpack:watch": "npx webpack --config webpack.config.cjs --watch --mode development",
        "build": "npm run webpack && sass scss:dist && web-ext build -i scss/ src/ --overwrite-dest",
        "dev": "concurrently \"npm run webpack:watch\" \"npm run scss\" \"npm run webext\""
    },
    "devDependencies": {
        "@types/node": "^22.5.1",
        "concurrently": "^8.2.2",
        "sass": "^1.77.8",
        "ts-loader": "^9.5.1",
        "typescript": "^5.5.4",
        "webpack": "^5.94.0",
        "webpack-cli": "^5.1.4"
    },
    "dependencies": {
        "browser-namespace": "^1.4.0"
    }
}