{
    "manifest_version": 2,
    "name": "BetterServ",
    "version": "0.2.1",
    "description": "enhances IServ",
    "content_scripts": [
        {
            "matches": [
                "*://*/iserv*"
            ],
            "js": [
                "dist/bettersidebar.js",
                "dist/iservlist.js",
                "dist/hidelogin.js",
                "dist/tictactoe.js"
            ],
            "css": [
                "dist/symbols.css",
                "dist/ubuntu.css",
                "dist/betterserv.css",
                "dist/rainbow.css"
            ],
            "run_at": "document_start"
        },
        {
            "matches": [
                "*://*/iserv/file*"
            ],
            "js": [
                "dist/betterfiles.js"
            ],
            "run_at": "document_start"
        }
    ],
    "permissions": [
        "activeTab",
        "storage",
        "https://tictactoe.responseplan.de/"
    ],
    "browser_action": {
        "default_title": "BetterServ",
        "default_popup": "static/index.html"
    },
    "icons": {
        "192": "img/android-chrome-192x192.png",
        "512": "img/android-chrome-512x512.png"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "pfannenschmidtlutz@gmail.com"
        }
    }
}