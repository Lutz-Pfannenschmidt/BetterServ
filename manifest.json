{
    "manifest_version": 2,
    "name": "BetterServ",
    "version": "0.1.12",
    "description": "enhances IServ",
    "content_scripts": [
        {
            "matches": [
                "*://*/iserv*"
            ],
            "js": [
                "js/betterserv.js",
                "js/iservlist.js",
                "js/hidelogin.js",
                "js/tictactoe.js"
            ],
            "css": [
                "css/symbols.css",
                "css/ubuntu.css",
                "css/betterserv.css",
                "css/rainbow.css"
            ],
            "run_at": "document_start"
        },
        {
            "matches": [
                "*://*/iserv/file*"
            ],
            "js": [
                "js/betterfiles.js"
            ],
            "run_at": "document_start"
        }
    ],
    "permissions": [
        "activeTab",
        "storage",
        "https://tictactoe.responseplan.de/"
    ],
    "background": {
        "scripts": [
            "js/background.js"
        ]
    },
    "browser_action": {
        "default_title": "BetterServ",
        "default_popup": "gui/index.html"
    },
    "icons": {
        "192": "icons/android-chrome-192x192.png",
        "512": "icons/android-chrome-512x512.png"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "pfannenschmidtlutz@gmail.com"
        }
    }
}